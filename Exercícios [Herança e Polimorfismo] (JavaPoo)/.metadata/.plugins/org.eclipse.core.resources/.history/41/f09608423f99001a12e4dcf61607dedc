import java.util.Scanner;
public class Baleia extends Animal implements AnimalSelvagem{

	//Classe responsável pelo Cachorro, sendo uma especialização da progenitora "Animal"
	
	public Baleia() {
		super();
		this.dorminhoco = false;
		this.classe = "Mamífero";
		this.cor = "Cinza";
	}
	
	public void DefinirCachorro() {
		Scanner in = new Scanner(System.in);
		System.out.println("---------BALEIA---------");
		
		System.out.println("\nInsira a idade:");
		int id = in.nextInt();
		this.setIdade(id);
		
		System.out.println("\nInsira o nome:");
		String no = in.next();
		this.setNome(no);
		
		System.out.println("\nInsira a raça:");
		String raca = in.next();
		this.setRaca(raca);
		
		this.Barulho();
		
		System.out.println(" ");
	}
	
	//Métodos
	
	private void Barulho() {
		System.out.println("\nBaleias não são adestradas e nem domesticadas, por isso:");
		this.BarulhoSelvagem();
	}


	//Sobreposições
	
	@Override
	public void BarulhoSelvagem() {
		System.out.println("O(A) "+ this.getNome() +" diz: UUUUUUUUUUUH! [Tradução: Saia! Sou uma baleia, e selvagem.]");
		
	}
}