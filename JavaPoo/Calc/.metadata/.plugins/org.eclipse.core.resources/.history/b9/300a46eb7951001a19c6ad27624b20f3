public class Calc {
	int n1;
	int n2;
	int r;
	int sinal;
	public void ler() {
		Scanner scan = new Scanner (System.in);
		System.out.println("Digite os números");
		n1=scan.nextInt();
		n2=scan.nextInt();
		System.out.println("escolha o sinal: 1=+, 2=-, 3=/,4=*. ");
		sinal=scan.nextInt();
	}	
	public void op() {
