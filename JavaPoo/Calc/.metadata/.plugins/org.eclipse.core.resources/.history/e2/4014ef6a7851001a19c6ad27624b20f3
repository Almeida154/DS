import java.util.Scanner;
public class Operacoes {
	Scanner in = new Scanner (System.in);
	int opc;
	int a, b, r;
	String tlgnepai;
	
	public void Ler(){
		System.out.println("Digite um valor:");
		a = in.nextInt();
		System.out.println("Digite outro valor:");
		b = in.nextInt();
	}
	
	public void SolicitarOp(){
		System.out.println("------------------------------CALCULADORA-----------------------------");
		System.out.println("Operações: 1-Soma | 2-Subtração | 3-Divisão | 4-Multiplicação | 5-Exit");
		opc = in.nextInt();
		switch(opc){
			case 1:
				Somar();
				break;
			case 2:
				Sub();
				break;
			case 3:
				Div();
				break;
			case 4:
				Mult();
				break;
		}
	}
	
	public void Apresentar(){
		switch(opc){
		case 1:
			tlgnepai = "soma";
			break;
		case 2:
			tlgnepai = "subtração";
			break;
		case 3:
			tlgnepai = "divisão";
			break;
		case 4:
			tlgnepai = "multiplicação";
			break;
		}
		System.out.println("O resultado da "+tlgnepai+" é "+r);
	}
	
	public void Somar() {
		r = a + b;
		Apresentar();
	}
	
	public void Sub() {
		r = a - b;
		Apresentar();
	}
	
	public void Div() {
		r = a / b;
		Apresentar();
	}
	
	public void Mult() {
		r = a * b;
		Apresentar();
	}
}