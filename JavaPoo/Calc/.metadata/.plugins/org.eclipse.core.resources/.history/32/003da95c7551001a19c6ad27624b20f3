import java.util.Scanner;
public class Operacoes {
	Scanner in = new Scanner (System.in);
	int opc;
	
	public void Ler(){
		double a, b;
		System.out.println("Digite um valor:");
		a = in.nextInt();
		System.out.println("Digite outro valor:");
		b = in.nextInt();
		return;
	}
	
	public void Somar() {
		double a=0, b=0, soma;
		soma = a + b;
		System.out.println(a+" + "+b+" = "+soma);
	}
	
	public void Sub() {
		double a=0, b=0, soma;
		soma = a - b;
		System.out.println(a+" - "+b+" = "+soma);
	}
	
	public void Div() {
		double a=0, b=0, soma;
		soma = a / b;
		System.out.println(a+" / "+b+" = "+soma);
	}
	
	public void Mult() {
		double a=0, b=0, soma;
		soma = a * b;
		System.out.println(a+" * "+b+" = "+soma);
	}
}