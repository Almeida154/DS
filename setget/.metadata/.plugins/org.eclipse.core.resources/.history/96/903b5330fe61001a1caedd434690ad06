import java.util.Scanner;
import javax.swing.JOptionPane;
public class Operacoes {
	private String sexo;
	private double alt, peso, r;
	
	public String getSexo() {
		return sexo;
	}
	
	public void setSexo(String sexo) {
		this.sexo = sexo;
	}
	
	public double getAltura() {
		return alt;
	}
	
	public void setAltura(double altura){
		this.alt = altura;
	}
	
	public double getPeso() {
		return peso;
	}
	
	public void setPeso(double peso){
		this.peso = peso;
	}
	
	public void Style(){
		System.out.println("----------Cálculo do Índice de Massa Corporal----------");
	}
	
	public void Result(){
		Scanner in = new Scanner(System.in);
		switch(sexo){
			case "Masculino":
				Masculino();
				break;
			case "masculino":
				Masculino();
				break;
			case "Feminino":
				Feminino();
				break;
			case "feminino":
				Feminino();
				break;
		}
	}
	
	public void Info(){
		Scanner in = new Scanner(System.in);
		System.out.println("Digite sua altura:");
		alt = in.nextDouble();
		System.out.println("Digite seu peso:");
		peso = in.nextDouble();
	}
	
	public void Calculo(){
		r=peso/(alt*alt);
	}
	
	public void Masculino(){
		Calculo();
		if(r>43){
			JOptionPane.showMessageDialog(null, "Você possui obesidade mórbida!\nSeu IMC: "+r);
		}
		else if(r>=30 && r<40){
			JOptionPane.showMessageDialog(null, "Você possui obesidade moderada!\nSeu IMC: "+r);
		}
		else if(r>=25 && r<30){
			JOptionPane.showMessageDialog(null, "Você possui obesidade leve!\nSeu IMC: "+r);
		}
		else if(r>=20 && r<25){
			JOptionPane.showMessageDialog(null, "Você possui um peso adequado!\nSeu IMC: "+r);
		}
		else if(r<20){
			JOptionPane.showMessageDialog(null, "Você possui um peso abaixo do normal!\nSeu IMC: "+r);
		}
	}
	
	public void Feminino(){
		Calculo();
		if(r>39){
			JOptionPane.showMessageDialog(null, "Você possui obesidade mórbida!\nSeu IMC: "+r);
		}
		else if(r>=29 && r<39){
			JOptionPane.showMessageDialog(null, "Você possui obesidade moderada!\nSeu IMC: "+r);
		}
		else if(r>=24 && r<29){
			JOptionPane.showMessageDialog(null, "Você possui obesidade leve!\nSeu IMC: "+r);
		}
		else if(r>=19 && r<24){
			JOptionPane.showMessageDialog(null, "Você possui um peso adequado!\nSeu IMC: "+r);
		}
		else if(r<19){
			JOptionPane.showMessageDialog(null, "Você possui um peso abaixo do normal!\nSeu IMC: "+r);
		}
	}
}